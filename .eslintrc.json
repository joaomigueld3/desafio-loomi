{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "max-len": ["error", {
            "code": 140,
            "tabWidth": 2,
            "comments": 120,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
          }],
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always", 
              "jsx": "always",
              "json": "always"
            }
          ]
    }
}
